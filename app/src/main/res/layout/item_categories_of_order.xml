<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:outlineAmbientShadowColor="@color/main"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:id="@+id/im_item_categories"
        android:src="@mipmap/layer_5"
        />

        <TextView
            android:id="@+id/tx_title"
            app:layout_constraintTop_toTopOf="@+id/im_item_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/im_item_categories"
            android:paddingTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="@string/categories_1"
            />
        <TextView
            android:id="@+id/tx_descriptions"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
app:layout_constraintTop_toBottomOf="@+id/tx_title"
            app:layout_constraintBottom_toBottomOf="@+id/im_item_categories"
            app:layout_constraintStart_toEndOf="@+id/im_item_categories"
            android:paddingTop="5dp"
            android:textSize="11dp"
            android:textStyle="italic"
            android:lines="2"
            android:text="Categories decriptions to put here to represent the info on items1"
            />

        <ImageView
            android:id="@+id/im_arr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/click_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>