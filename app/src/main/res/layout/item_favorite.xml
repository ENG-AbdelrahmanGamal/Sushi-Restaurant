    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_myHeart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-10dp"
        android:backgroundTint="@color/main"
        android:src="@drawable/heart3"
        style="@style/main_custom_button"
        app:layout_constraintBottom_toBottomOf="@+id/card_item_fav"
        app:layout_constraintStart_toEndOf="@+id/card_item_fav"
        app:layout_constraintTop_toTopOf="@+id/card_item_fav" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_fav"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:background="@drawable/custom_border_card_view"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/im_fav"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:layout_marginStart="-30dp"
            android:src="@drawable/tt"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@+id/card_item_fav"
            app:layout_constraintEnd_toStartOf="@+id/card_item_fav"
            app:layout_constraintStart_toStartOf="@+id/card_item_fav"
            app:layout_constraintTop_toTopOf="@+id/card_item_fav" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_it_fav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="29dp"
                android:paddingStart="50dp"
                android:text="@string/item_1"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/im_item_item_categories"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_it_fav_descriptions"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:lines="2"
                android:paddingStart="30dp"
                android:text="Categories decriptions to put here to represent the info on items1"
                android:textSize="11dp"
                android:textStyle="italic" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


