<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:outlineSpotShadowColor="@color/main"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_item_getOffer"
                android:layout_width="153dp"
                android:layout_height="190dp"
                android:src="@mipmap/layer_2_copy_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_titile"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="@string/free_lyrimshrimp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/view_makeLine_item_getOffer"

                app:layout_constraintStart_toStartOf="@+id/im_item_getOffer" />

            <View
                android:id="@+id/view_makeLine_item_getOffer"
                android:layout_width="133dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toTopOf="@+id/im_icone_date_item_getOffer"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/im_icone_date_item_getOffer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="3dp"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:src="@drawable/baseline_date_range_24"
                app:layout_constraintBottom_toBottomOf="@+id/im_item_getOffer"
                app:layout_constraintStart_toStartOf="@+id/im_item_getOffer"

                />

            <TextView
                android:id="@+id/tv_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"

                android:text="@string/Friday"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@+id/im_icone_date_item_getOffer"
                app:layout_constraintStart_toEndOf="@+id/im_icone_date_item_getOffer"
                app:layout_constraintTop_toTopOf="@+id/im_icone_date_item_getOffer"


                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>