<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SushiRestaurant" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SushiRestaurant" parent="Base.Theme.SushiRestaurant" />

    <style name="Theme.SushiRestaurant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="item_category">
        <item name="borderlessButtonStyle">@color/main</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="addElevationShadow">true</item>
        <item name="android:lines">@integer/material_motion_duration_medium_1</item>
    </style>

    <style name="Theme.SushiRestaurant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SushiRestaurant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="second_custom_button">
        <item name="round">20dp</item>
        <item name="lineHeight">2dp</item>
        <item name="borderRound">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_custom_button</item>

    </style>
    <style name="main_custom_button">
        <item name="round">20dp</item>
        <item name="lineHeight">2dp</item>
        <item name="borderRound">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_custom_button</item>

    </style>

</resources>