<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>


    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@android:color/holo_blue_dark" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Adjust radius to match the background -->
        </shape>
    </item>
</selector>